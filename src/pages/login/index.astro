---
import Layout from '../../layouts/LoyoutAuth.astro'
import FormLogin from "../../components/react/login-ui/FormLogin";
import RegisterForm from '@/components/react/login-ui/FormRegister';
import "../../styles/auth-style.css";
---

<Layout>
  <div class="container">
    <div class="forms-container">
      <div class="signin-signup">
        <FormLogin client:visible />
        <RegisterForm client:visible/> 
      </div>
    </div>

    <div class="panels-container">
      <div class="panel left-panel">
        <div class="content">
          <h3>New here ?</h3>
          <p>
            Lorem ipsum, dolor sit amet consectetur adipisicing elit. Debitis,
            ex ratione. Aliquid!
          </p>
          <button class="btn transparent" id="sign-up-btn"> Sign up </button>
        </div>
        <img src="img/login.svg" class="image" alt="" />
      </div>
      <div class="panel right-panel">
        <div class="content">
          <h3>One of us ?</h3>
          <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Nostrum
            laboriosam ad deleniti.
          </p>
          <button class="btn transparent" id="sign-in-btn"> Sign in </button>
        </div>
        <img src="img/register.svg" class="image" alt="" />
      </div>
    </div>
  </div>
</Layout>

<script>
  const sign_in_btn = document.querySelector("#sign-in-btn");
  const sign_up_btn = document.querySelector("#sign-up-btn");
  const container = document.querySelector(".container");

  if (sign_up_btn) {
    sign_up_btn.addEventListener("click", () => {
      if (container) {
        container.classList.add("sign-up-mode");
      }
    });
  }

  if (sign_in_btn) {
    sign_in_btn.addEventListener("click", () => {
      if (container) {
        container.classList.remove("sign-up-mode");
      }
    });
  }
</script>

